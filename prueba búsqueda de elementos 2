int ano {
	
	int f, g;
	
	printf ("Fecha del dato que quiere consultar:\nAño:\n2021\n2022\n");
	printf ("Si quiere ver los datos de los dos años escriba 2122");
	scanf ("%f", &f);
	
	switch (f) {
		case 2021:
			g = 1;
			break;
		case 2022:
			g = 2;
			break;
		case 2122:
			g = 3;
	}
	
	return g;
}

